@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido al Sistema de Reservas del Hotel de Ashlee</h1>
    <p class="lead">Administra clientes, reservas y planes de recompensa fácilmente.</p>

    <img src="~/images/mimeme.jpg" alt="Meme favorito" class="img-fluid" style="width: 400px; height: 500px; object-fit: cover;" />

    <div class="mt-4">
        <input type="text" id="inputTexto" class="form-control form-control-lg" placeholder="Escribe algo aquí..." />
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-info btn-lg" onclick="mostrarAlerta()">Mostrar Alerta</button>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAlerta() {
            var texto = document.getElementById('inputTexto').value;
            alert("Mi nombre es Ashlee Soledispa, mi hobbie es ir al gym y correr y el valor del campo de texto es: " + texto);
        }
    </script>
}
